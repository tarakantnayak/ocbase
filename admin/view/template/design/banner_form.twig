<script>
function saveImageContent(banner_image_id, image_row){
  alert("inside saveMaintenanceValue");
  var line_1 = document.getElementById("input-line_1" + image_row).value;
  var line_2 = document.getElementById("input-line_2" + image_row).value;
  var line_3 = document.getElementById("input-line_3" + image_row).value;
  var line_4 = document.getElementById("input-line_4" + image_row).value;

  var sort_order_1 = document.getElementById("input-sort_order_1" + image_row).value;
  var sort_order_2 = document.getElementById("input-sort_order_2" + image_row).value;
  var sort_order_3 = document.getElementById("input-sort_order_3" + image_row).value;
  var sort_order_4 = document.getElementById("input-sort_order_4" + image_row).value;

  alert("1");
  
  var array_data = [];

  array_data = {'line_1': line_1, 'line_2': line_2, 'line_3': line_3, 'line_4': line_4, 'sort_order_1': sort_order_1, 'sort_order_2': sort_order_2, 'sort_order_3': sort_order_3, 'sort_order_4': sort_order_4 }
  alert("2");
  
  
  $.ajax({
  type: 'post',
  url: 'index.php?route=design/banner/saveImageContent&user_token={{ user_token }}&banner_image_id='+ banner_image_id,
  data: {array_data : array_data},
  dataType: 'json',
  success: function(json){
    alert("message :"+json['message']);
    alert("value :"+json['value']);
    if (json['value'] == 1){
      $("#div_message").html('<div class="col-md-12 text-center" style="color:#33cc33"><b>' + json['message'] + '</b></div>').show('fast').delay(5000).hide('fast');
      
    } else {
      $("#div_message").html('<div class="col-md-12 text-center" style="color:red"><b>' + json['message'] + '</b></div>').show('fast').delay(5000).hide('fast');
    }
    
  },
  error: function (xhr, ajaxOptions, thrownError) {
  alert(thrownError + "\r\n" + xhr.statusText + "\r\n" + xhr.responseText);
  }
  });

}
</script>



